rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /calculations/{calculationId} {
      // Allow read/write access only to authenticated users
      allow read, write: if request.auth != null;
      
      // Allow the author of the record to read and write the document
      allow read, write: if resource.data.authorId == request.auth.uid;
      
      // Deny any other read or write operations
      allow read, write: if false;
    }
  }
}







